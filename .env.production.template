# QazAirbot Production Environment Configuration
# Copy this to .env.production and fill in your actual values

# Bot Configuration
BOT_TOKEN=your_production_bot_token_from_botfather
WEBHOOK_URL=
WEBHOOK_PATH=/webhook

# Database Configuration
DATABASE_URL=postgresql://qazairbot_user:CHANGE_THIS_PASSWORD@postgres:5432/qazairbot
POSTGRES_DB=qazairbot
POSTGRES_USER=qazairbot_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD  # Generate strong password!

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD  # Generate strong password!

# Air Quality API
AIR_API_URL=https://api.air.org.kz/api/airgradient/latest
AIR_API_RATE_LIMIT=100

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Data Sync
SYNC_INTERVAL_MINUTES=5

# Localization
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=["ru", "kk"]

# Production Security Settings
# Generate strong random passwords:
# openssl rand -base64 32
